<?xml version="1.0" encoding="utf-8"?>
<mx:Box xmlns:mx="http://www.adobe.com/2006/mxml" width="100%"
   height="100%" horizontalAlign="center" horizontalScrollPolicy="off">
  <mx:Script>
   <![CDATA[
     override public function set data(value:Object):void
     {
       super.data = value;
       newValue = dd.text;
     }
   ]]>
 </mx:Script>
  <mx:TextInput id="dd" change="{newValue = dd.text}"/>
  <mx:String id="newValue" />
</mx:Box>